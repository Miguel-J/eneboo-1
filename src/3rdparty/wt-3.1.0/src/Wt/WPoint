#ifndef WPOINT_H_
#define WPOINT_H_

#include <Wt/WDllDefs.h>

namespace Wt {

/*! \class WPoint Wt/WPoint Wt/WPoint
 *  \brief Utility class that defines a 2D point with integer coordinates.
 *
 * \sa WPolygonArea
 */
class WT_API WPoint
{
public:
  /*! \brief Default constructor.
   *
   * Constructs a point (<i>x=0</i>, \p y=0).
   */
  WPoint();

  /*! \brief Construct a point.
   *
   * Constructs a point (<i>x</i>, \p y).
   */
  WPoint(int x, int y)
    : x_(x), y_(y) { }

  /*! \brief Changes the X coordinate.
   */
  void setX(int x) { x_ = x; }

  /*! \brief Changes the Y coordinate.
   */
  void setY(int y) { y_ = y; }

  /*! \brief Returns the X coordinate.
   */
  int x() const { return x_; }

  /*! \brief Returns the Y coordinate.
   */
  int y() const { return y_; }

  /*! \brief Comparison operator.
   */
  bool operator== (const WPoint& other) const;

  /*! \brief Comparison operator.
   */
  bool operator!= (const WPoint& other) const;

  WPoint& operator+= (const WPoint& other);

private:
  int x_, y_;
};

};

#endif // WPOINTF_H_
